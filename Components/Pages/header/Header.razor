@rendermode InteractiveServer

<header class="bg-slate-300 px-10 py-4 flex justify-between items-center">

  <h2>@actText</h2>


  <ul class="flex gap-2">
    <li>
      <NavLink class="p-2 bg-slate-600" href="/" @onclick='() => changeActiveItem("Home")'>
        Home
      </NavLink>
    </li>

    <li>
      <NavLink class="p-2 bg-slate-600" href="/about" @onclick='() => changeActiveItem("About")'>
        About
      </NavLink>
    </li>
  </ul>
</header>

@code {
  public string actText = "Home";

  private void changeActiveItem(string newText)
  {
    actText = newText;
  }

}
