<div class="w-[30%] flex flex-col gap-10 items-center px-2 py-5 bg-light-purple">
  <div class=" flex flex-col gap-3 items-center">
    <span class="text-xl font-semibold text-primary-teal">@word</span>
    <span class="text-white font-bold text-lg">@translate</span>
  </div>

  <p class="text-center text-sm text-zinc-400">@sentence</p>

  <button class="px-5 py-2 border-2 border-white hover:bg-white hover:text-[#bb86dc] duration-300"
    @onclick="() => OnClick.InvokeAsync(word)" type="button">Вивчено</button>
</div>

@code {
  [Parameter]
  public string word { get; set; }

  [Parameter]
  public string sentence { get; set; }

  [Parameter]
  public string translate { get; set; }

  [Parameter]
  public string type { get; set; }

  [Parameter]
  public EventCallback<string> OnClick { get; set; }
}